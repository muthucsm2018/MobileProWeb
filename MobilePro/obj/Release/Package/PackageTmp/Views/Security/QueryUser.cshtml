
@{
    ViewBag.Title = "Users List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Users List
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Users List</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box box-default">
            <div class="col-sm-12 callout callout-info">
                <p id="div_success">@Html.Raw(ViewBag.Message)</p>
            </div>
            <div class="box-body">
                <h4 class="box-header">Search User</h4>
                <div class="row">

                    <div class="col-md-3">

                        <div class="form-group">
                            <label>First Name</label>
                            <div>
                                <input type="text" name="FirstName" placeholder="Enter first name" class="form-control" id="FirstName">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Role</label>
                            <div>
                                @Html.DropDownList("ddrole",
                                            new SelectList(ViewBag.RoleList as System.Collections.IEnumerable, "Value", "Text"), "All",
                                            new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Status</label>
                            <div>
                                <select id="ddstatus" name="ddstatus" class="form-control">
                                    <option value="">All</option>
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="btn-adj">
                            <button type="button" onclick="GetInfo();" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
                        </div>
                    </div>                   

                </div>
        </div> <!--/.box-->
        </div>
        <div class="box box-default">
           
            <div class="box-body">
                <div class=" box-body table-responsive no-padding">

                    <table id="myTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Contact No</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Updated By</th>
                                <th>Updated Date</th>
                            </tr>
                        </thead>
                    </table>

                </div>
            </div> <!--/.box-body-->
        </div> <!--/.box-->
    </section> <!-- /.content-->

</div><!-- /.content-wrapper -->
<!-- page script -->
<script type="text/javascript">
    jQuery(document).ready(function () {
        $.fn.dataTable.ext.errMode = 'throw';

        $('#myTable').dataTable({

            dom: 'lBfrtip',
            responsive: !0,
            buttons: [
                 {
                     text: '<i class="fa fa-file-excel-o"></i>' + '&nbsp;' + 'Export Excel',
                     className: 'btn btn-primary',
                     extend: 'excel',
                     title: 'Users List',
                     exportOptions: {
                         columns: [0, 1, 2, 3, 4, 5, 6, 7, 8]
                     }
                 }
            ],
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            //"order": [[4, "desc"]],
            "iDisplayLength": @System.Configuration.ConfigurationManager.AppSettings["WebGridPageSize"],
            "sAjaxSource": "@Url.Action("QueryUsersList", "Security")",
            "fnServerParams": function (aoData) {
                aoData.push(
                { "name": "FirstName", "value": $('#FirstName').val() },
                { "name": "Role", "value": $('#ddrole').val() },
                { "name": "Status", "value": $('#ddstatus').val() });
            },
            "bProcessing": true,
            "aoColumns": [
                { "sWidth": "150px" },
                { "sWidth": "150px" },
                { "sWidth": "150px" },
                { "sWidth": "200px" },
                { "sWidth": "150px" },
                { "sWidth": "150px" },
                {
                    "sWidth": "100px",
                    "render": function (data, type, row) {
                        
                        if (type === 'display') {
                            if (data == 'True') {
                                return '<input type="checkbox"  disabled="disabled" checked>';
                            }
                            else {
                                return '<input disabled="disabled" type="checkbox">';
                            }
                        }
                        else {
                            if (data == 'True') {
                                return 'Active';
                            }
                            else {
                                return 'Inactive';
                            }
                        }
                    }
                },
                { "sWidth": "150px" },
                { "sWidth": "150px" }
            ]
        });
    });

    function GetInfo() {
        $('#myTable').DataTable().ajax.reload();
    }


</script>



